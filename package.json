{
  "name": "scheme-editor",
  "version": "1.0.0",
  "description": "Editor for single-line schemes and mnemonic schemes",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "prettier --check . && eslint . --ext .js,.ts && tsc --noEmit",
    "lint:fix": "prettier --write . && eslint . --fix --ext .js,.ts",
    "prepare": "husky install",
    "build": "webpack --mode=production --env production  --progress",
    "start": "webpack serve --mode=development"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PaulMartynov/scheme-editor.git"
  },
  "keywords": [
    "scheme",
    "editor",
    "single-line",
    "mnemonic",
    "schemes"
  ],
  "private": true,
  "author": "JuFeng <p.martynov@antraks.ru>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/PaulMartynov/scheme-editor/issues"
  },
  "homepage": "https://github.com/PaulMartynov/scheme-editor#readme",
  "dependencies": {
    "@reduxjs/toolkit": "^1.8.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.18.6",
    "@babel/plugin-transform-runtime": "^7.18.6",
    "@babel/preset-env": "^7.18.6",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@testing-library/dom": "^8.14.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^14.2.1",
    "@types/jest": "^28.1.3",
    "@types/react": "^18.0.14",
    "@types/react-dom": "^18.0.5",
    "@types/redux-mock-store": "^1.0.3",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "babel-loader": "^8.2.5",
    "babel-plugin-jsx-remove-data-test-id": "^3.0.0",
    "css-loader": "^6.7.1",
    "dotenv": "^16.0.1",
    "eslint": "^8.18.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.5.3",
    "eslint-plugin-jest-dom": "^4.0.2",
    "eslint-plugin-prettier": "^4.1.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^28.1.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "redux-mock-store": "^1.5.4",
    "sass": "^1.53.0",
    "sass-loader": "^13.0.2",
    "style-loader": "^3.3.1",
    "timekeeper": "^2.2.0",
    "typescript": "^4.7.4",
    "url-loader": "^4.1.1",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.9.2"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --cache --fix --ext .js,.ts",
    "*.{js,ts,tsx,css,md,yml,html,json}": "prettier --write"
  }
}
